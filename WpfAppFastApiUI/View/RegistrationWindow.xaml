<Window x:Class="WpfAppFastApiUI.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfAppFastApiUI.View"
        mc:Ignorable="d"
        Title="CategoryWindow" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">
    
    <Border CornerRadius="10" Background="White" Padding="20" Margin="20" BorderBrush="#DDDDDD" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Создать аккаунт"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Логин -->
            <TextBlock Text="Имя пользователя" Margin="0,0,0,5"/>
            <TextBox x:Name="UserNameBox"
                     Height="35"
                     Width="280"
                     Padding="10"
                     Background="#F2F2F2"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Margin="0,0,0,10"/>

            <!-- Email -->
            <TextBlock Text="Возраст" Margin="0,0,0,5"/>
            <TextBox x:Name="AgeBox"
                     Height="35"
                     Width="280"
                     Padding="10"
                     Background="#F2F2F2"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Телега Айди" Margin="0,0,0,5"/>
            <TextBox x:Name="TgIdBox"
                     Height="35"
                     Width="280"
                     Padding="10"
                     Background="#F2F2F2"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Номер Телефона" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneNumBox"
                     Height="35"
                     Width="280"
                     Padding="10"
                     Background="#F2F2F2"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Margin="0,0,0,20"/>

            <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться"
                    Width="280"
                    Height="40"
                    Background="#3498DB"
                    Foreground="White"
                    BorderBrush="#3498DB"
                    FontWeight="SemiBold"
                    Click="Register_Click"
                    Cursor="Hand"
                    BorderThickness="0"
                    Margin="0,0,0,10"/>

            <TextBlock Text="Уже есть аккаунт? Войти"
                       Foreground="#3498DB"
                       FontSize="12"
                       Cursor="Hand"
                       TextAlignment="Center"
                       MouseDown="LoginLink_Click"/>
        </StackPanel>
    </Border>
</Window>
