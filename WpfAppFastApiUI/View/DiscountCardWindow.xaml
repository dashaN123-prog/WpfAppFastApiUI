<Window x:Class="WpfAppFastApiUI.View.DiscountCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дисконтная карта" Height="280" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Ваша дисконтная карта" FontSize="22" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Text="Номер карты: 1234 5678 9012 3456" FontSize="18" TextAlignment="Center"/>
        <TextBlock Text="Скидка: 10%" FontSize="18" TextAlignment="Center" Margin="0,10"/>
        <TextBlock Text="Баллы: 245" FontSize="18" TextAlignment="Center" Margin="0,0,0,10"/>
        
        <Button Content="Закрыть" Width="100" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Close_Click"/>
    </StackPanel>
</Window>

